{
  "compilerOptions": {
    "lib": [
      "es6",
      "dom"
    ],
    "target": "es6",
    "declaration": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./build",
    "preserveConstEnums": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "removeComments": true,
    "noImplicitAny": false,
    "typeRoots": [
      "./node_modules/@types"
    ],
    "resolveJsonModule":true,
    
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*-spec.ts"
  ],
  "plugins": [
    { "name": "typescript-tslint-plugin" }
  ]
}